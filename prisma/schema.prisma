generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ユーザーモデル
model User {
  id               String    @id @default(uuid())
  email            String    @unique
  password         String
  name             String?
  initialBalance   Decimal?  @db.Decimal(10, 2) @map("initial_balance") // 初期残高
  balanceStartDate DateTime? @map("balance_start_date") // 残高計算の開始日
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  // Relations
  incomes           Income[]
  expenses          Expense[]
  debts             Debt[]
  goals             Goal[]
  categories        Category[]
  transactions      Transaction[]
  scheduledPayments ScheduledPayment[]

  @@map("users")
}

// 収入
model Income {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  amount    Decimal  @db.Decimal(10, 2)
  source    String
  recurring Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("incomes")
}

// 支出
model Expense {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  amount    Decimal  @db.Decimal(10, 2)
  category  String
  recurring Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("expenses")
}

// 負債
model Debt {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  name         String
  totalAmount  Decimal  @db.Decimal(10, 2) @map("total_amount")
  remaining    Decimal  @db.Decimal(10, 2)
  interestRate Decimal  @db.Decimal(5, 2) @map("interest_rate")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("debts")
}

// 目標
model Goal {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  type         String   // "debt_payoff" or "savings"
  targetAmount Decimal  @db.Decimal(10, 2) @map("target_amount")
  targetDate   DateTime @map("target_date")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("goals")
}

// カテゴリー（科目）
model Category {
  id             String   @id @default(uuid())
  userId         String   @map("user_id")
  name           String
  type           String   // "income" or "expense"
  color          String?  // カラーコード（UI用）
  icon           String?  // アイコン（絵文字など）
  order          Int      @default(0) // 表示順序
  monthlyBudget  Decimal? @db.Decimal(10, 2) @map("monthly_budget") // 月間予算
  isPublicBurden Boolean  @default(false) @map("is_public_burden") // 公的負担フラグ
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  // Relations
  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions      Transaction[]
  scheduledPayments ScheduledPayment[]

  @@index([userId])
  @@index([userId, type])
  @@index([userId, isPublicBurden])
  @@map("categories")
}

// トランザクション（家計簿エントリー）
model Transaction {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  categoryId  String   @map("category_id")
  amount      Decimal  @db.Decimal(10, 2)
  description String?
  date        DateTime @default(now())
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  category         Category          @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  scheduledPayment ScheduledPayment?

  @@index([userId])
  @@index([userId, date])
  @@index([categoryId])
  @@map("transactions")
}

// 支払い予定
model ScheduledPayment {
  id              String    @id @default(uuid())
  userId          String    @map("user_id")
  categoryId      String    @map("category_id")
  estimatedAmount Decimal   @db.Decimal(10, 2) @map("estimated_amount")
  dueDate         DateTime  @map("due_date")
  memo            String?
  status          String    @default("pending") // "pending" or "completed"
  transactionId   String?   @unique @map("transaction_id")
  completedAt     DateTime? @map("completed_at")
  isPublicBurden  Boolean   @default(false) @map("is_public_burden") // 公的負担フラグ
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  // Relations
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  category    Category     @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  transaction Transaction? @relation(fields: [transactionId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([userId, status])
  @@index([userId, isPublicBurden])
  @@map("scheduled_payments")
}
